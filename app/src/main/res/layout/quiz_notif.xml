<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/nextButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#CAFFB9"
        android:fontFamily="@font/montserrat"
        android:text="@string/next_button"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lessonTitle3"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="126dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/Lesson1"

        android:textColor="#2E4057"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userLife2"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@drawable/ic_life_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_life_foreground" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar5"
        app:layout_constraintStart_toEndOf="@+id/exitButton2"
        app:layout_constraintTop_toTopOf="@+id/progressBar5" />

    <ImageView
        android:id="@+id/exitButton2"
        android:layout_width="89dp"
        android:layout_height="85dp"
        android:contentDescription="@drawable/ic_exit_foreground"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar"
        app:srcCompat="@drawable/ic_exit_foreground" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/userLife2"
        app:layout_constraintStart_toEndOf="@+id/progressBar5"
        app:layout_constraintTop_toTopOf="@+id/userLife2" />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar2"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/progressBar2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="287dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="302dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/notif_title"

        android:textColor="#66A182"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>