<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/customize_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_500p_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/tracker_today_breakdown" />

    <TextView
        android:id="@+id/my_aqua_points_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aqua_points"
        android:fontFamily="@font/montserrat"
        android:textColor="#CAFFB9"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/aqua_points_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/aqua_points"
        app:tint="#CAFFB9"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/my_aqua_points_title"
        app:layout_constraintTop_toBottomOf="@+id/my_aqua_points_title"
        android:contentDescription="@string/aqua_points"/>

    <TextView
        android:id="@+id/aqua_points_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aqua99"
        android:fontFamily="@font/montserrat"
        android:textColor="#CAFFB9"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/aqua_points_icon"
        app:layout_constraintStart_toEndOf="@+id/aqua_points_icon"
        app:layout_constraintTop_toTopOf="@+id/aqua_points_icon" />

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/aqua_points_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_redeem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2E4057"
            android:fontFamily="@font/montserrat"
            android:text="@string/redeem"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"
            tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_customize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CAFFB9"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/customize"
            android:textColor="@color/button_blue"
            app:cornerRadius="20dp"
            tools:ignore="VisualLintButtonSize,VisualLintBounds" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mascot_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mascot_el"
        android:contentDescription="@string/bibe"
        android:scaleType="fitCenter"

        android:layout_marginTop="16dp"

        app:layout_constraintBottom_toTopOf="@+id/scrollable_content_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/scrollable_content_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.70" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#CCE8D6"
        android:paddingBottom="120dp"

        app:layout_constraintTop_toTopOf="@+id/scrollable_content_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/customize_item_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp"
                app:columnCount="3"
                app:useDefaultMargins="true">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:src="@drawable/white"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    android:contentDescription="@string/grey" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:src="@drawable/violet"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    android:contentDescription="@string/grey" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:src="@drawable/grey"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    android:contentDescription="@string/grey" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:src="@drawable/blue"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    android:contentDescription="@string/blue" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:src="@drawable/fedora"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    android:contentDescription="@string/fedora" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:src="@drawable/bibe"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal"
                    android:contentDescription="@string/bibe" />

            </androidx.gridlayout.widget.GridLayout>

            <Button
                android:id="@+id/button_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="#2E4057"
                android:fontFamily="@font/montserrat"
                android:text="@string/done"
                android:textColor="#FFFFFF"
                app:cornerRadius="20dp"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>