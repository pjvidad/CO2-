<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_500p_2">

    <!-- Top Left - My Points Card -->
    <LinearLayout
        android:id="@+id/pointsCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="My Points\nðŸª™ 99"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Top Right - Character Avatar -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:background="@drawable/avatar_bg"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/characterAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />
    </FrameLayout>

    <!-- Discovery and Customize Buttons -->
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pointsCard">

        <Button
            android:id="@+id/btnDiscovery"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#1C2B48"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Redeem"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnCustomize"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:backgroundTint="#CAFFB9"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Customize"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Main Character Container (Center) - Flexible Space -->
    <FrameLayout
        android:id="@+id/characterContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/clothingOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSection"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/mainCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery" />
    </FrameLayout>

    <!-- Bottom Clothing Options Panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clothingOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_navbar"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Guideline for centering -->

        <!-- Row 1 -->
        <!-- Clothing Item 1 (Left) -->
        <FrameLayout
            android:id="@+id/clothingFrame1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/viole"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@id/clothingFrame2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/clothing1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery" />
        </FrameLayout>

        <!-- Clothing Item 2 (Center) -->
        <FrameLayout
            android:id="@+id/clothingFrame2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@id/clothingFrame3"
            app:layout_constraintStart_toEndOf="@id/clothingFrame1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/clothing2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery" />
        </FrameLayout>

        <!-- Clothing Item 3 (Right) -->
        <FrameLayout
            android:id="@+id/clothingFrame3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/clothingFrame2"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/clothing3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery" />
        </FrameLayout>

        <!-- Row 2 -->
        <!-- Clothing Item 4 (Left) -->
        <FrameLayout
            android:id="@+id/clothingFrame4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@id/clothingFrame5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clothingFrame1">

            <ImageView
                android:id="@+id/clothing4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery" />
        </FrameLayout>

        <!-- Clothing Item 5 (Center) -->
        <FrameLayout
            android:id="@+id/clothingFrame5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@id/clothingFrame6"
            app:layout_constraintStart_toEndOf="@id/clothingFrame4"
            app:layout_constraintTop_toBottomOf="@id/clothingFrame2">

            <ImageView
                android:id="@+id/clothing5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery" />
        </FrameLayout>

        <!-- Clothing Item 6 (Right) -->
        <FrameLayout
            android:id="@+id/clothingFrame6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/clothingFrame5"
            app:layout_constraintTop_toBottomOf="@id/clothingFrame3">

            <ImageView
                android:id="@+id/clothing6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>