<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_500p_2">

    <!-- Top Left - My Points Card -->
    <LinearLayout
        android:id="@+id/pointsCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@drawable/points_card_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="My Points\nðŸª™ 99"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Top Right - Character Avatar -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@drawable/avatar_bg"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/characterAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />
    </FrameLayout>

    <!-- Discovery and Customize Buttons -->
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pointsCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnDiscovery"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#5D4037"
            android:text="Discovery"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnCustomize"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:backgroundTint="#81C784"
            android:text="Customize"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- Main Character Container (Center) - Large Display -->
    <FrameLayout
        android:id="@+id/characterContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/buttonSection"
        android:layout_above="@id/clothingOptions"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:minHeight="200dp">

        <ImageView
            android:id="@+id/mainCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery" />
    </FrameLayout>

    <!-- Bottom Clothing Options (6 items in 2 rows) -->
    <LinearLayout
        android:id="@+id/clothingOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/clothing_panel_bg"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:elevation="4dp"
        android:minHeight="180dp">

        <!-- First Row - 3 items -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Clothing Item 1 -->
            <FrameLayout
                android:id="@+id/clothingFrame1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:background="@drawable/clothing_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/clothing1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery" />
            </FrameLayout>

            <!-- Clothing Item 2 -->
            <FrameLayout
                android:id="@+id/clothingFrame2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:background="@drawable/clothing_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/clothing2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery" />
            </FrameLayout>

            <!-- Clothing Item 3 -->
            <FrameLayout
                android:id="@+id/clothingFrame3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:background="@drawable/clothing_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/clothing3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery" />
            </FrameLayout>
        </LinearLayout>

        <!-- Second Row - 3 items -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <!-- Clothing Item 4 -->
            <FrameLayout
                android:id="@+id/clothingFrame4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:background="@drawable/clothing_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/clothing4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery" />
            </FrameLayout>

            <!-- Clothing Item 5 -->
            <FrameLayout
                android:id="@+id/clothingFrame5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:background="@drawable/clothing_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/clothing5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery" />
            </FrameLayout>

            <!-- Clothing Item 6 -->
            <FrameLayout
                android:id="@+id/clothingFrame6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:background="@drawable/clothing_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/clothing6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>