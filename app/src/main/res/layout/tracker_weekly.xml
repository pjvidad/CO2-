<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Carbon Footprint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Today's Impact -->
        <TextView
            android:id="@+id/todayImpact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Impact"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/impactValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.5 kg CO2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/impactComparison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12% below yesterday"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#1C2B48"
            android:text="+ Add"
            android:textColor="#fff"
            android:textSize="14sp" />

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#fff"
                android:backgroundTint="#1C2B48"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week"
                android:textColor="#fff"
                android:backgroundTint="#6FCF97"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:textColor="#fff"
                android:backgroundTint="#1C2B48"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Weekly Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="This Week"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Bar Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:weightSum="7">

                <!-- Monday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="80dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Mon"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Tuesday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="120dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tue"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Wednesday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="150dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Wed"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Thursday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="100dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Thu"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Friday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="90dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Fri"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Saturday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="130dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Sat"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Sunday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="110dp"
                        android:background="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Sun"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Weekly Average -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Weekly Average: 8.0 kg CO2/day"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_navbar"
        android:padding="12dp"
        android:elevation="6dp">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            app:tint="#1C2B48" />

        <ImageButton
            android:id="@+id/navBook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_book"
            android:contentDescription="Book"
            app:tint="#1C2B48" />

        <ImageButton
            android:id="@+id/navCalc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_calculator"
            android:contentDescription="Calculator"
            app:tint="#1C2B48" />

        <ImageButton
            android:id="@+id/navBag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_shop"
            android:contentDescription="Bag"
            app:tint="#1C2B48" />
    </LinearLayout>

</RelativeLayout>
