<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="121dp"
        android:layout_height="98dp"
        android:layout_marginStart="274dp"
        android:layout_marginBottom="589dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="226dp"
        android:layout_marginBottom="594dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Username!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#2E4057"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fixedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="646dp"
        android:fontFamily="@font/montserrat"
        android:text="Welcome back,"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="92dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/taskButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:backgroundTint="#CAFFB9"
            android:fontFamily="@font/montserrat"
            android:text="Task"
            android:textColor="@color/black"
            app:iconSize="50dp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/eventsButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:backgroundTint="#2E4057"
            android:fontFamily="@font/montserrat"

            android:text="Events" />
    </LinearLayout>

    <TextView
        android:id="@+id/TaskOrEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="50dp"
        android:layout_marginTop="222dp"
        android:fontFamily="@font/montserrat"
        android:text="Today's Task"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="97dp"
        android:layout_height="76dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="264dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="216dp"
        android:layout_height="76dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="51dp"
        android:background="@color/text_view_background_color"
        android:backgroundTint="#AAD7A4"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:text="Read and take a quiz on the app's library"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DoneButton"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#AAD7A4"
        android:fontFamily="@font/montserrat"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="216dp"
        android:layout_height="76dp"
        android:layout_marginTop="397dp"
        android:layout_marginEnd="48dp"
        android:background="@color/text_view_background_color"
        android:backgroundTint="#AAD7A4"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:text="Declutter e-waste in your house."
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="97dp"
        android:layout_height="76dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="397dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="473dp"
        android:backgroundTint="#AAD7A4"
        android:fontFamily="@font/montserrat"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doneButton2"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="606dp"
        android:backgroundTint="#AAD7A4"
        android:fontFamily="@font/montserrat"
        android:text="Done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="216dp"
        android:layout_height="76dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="530dp"
        android:background="@color/text_view_background_color"
        android:backgroundTint="#AAD7A4"
        android:fontFamily="@font/montserrat"
        android:padding="8dp"
        android:text="Walk 10,000 steps today"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="97dp"
        android:layout_height="76dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="530dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>