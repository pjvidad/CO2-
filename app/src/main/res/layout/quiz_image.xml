<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="260dp"
        android:layout_height="119dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="75dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/question_1"
        android:textColor="#66A182"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/userLife3"
        app:layout_constraintStart_toEndOf="@+id/progressBar7"
        app:layout_constraintTop_toTopOf="@+id/userLife3" />

    <TextView
        android:id="@+id/lessonTitle4"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"

        android:text="@string/Lesson1"
        android:textColor="#2E4057"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userLife3"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@drawable/ic_life_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_life_foreground" />

    <ImageView
        android:id="@+id/exitButton3"
        android:layout_width="89dp"
        android:layout_height="85dp"
        android:contentDescription="@drawable/ic_exit_foreground"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar8"
        app:srcCompat="@drawable/ic_exit_foreground" />

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="13dp"
        android:progress="100"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar6"
        app:layout_constraintStart_toEndOf="@+id/progressBar8"
        app:layout_constraintTop_toTopOf="@+id/progressBar6" />

    <ProgressBar
        android:id="@+id/progressBar8"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="11dp"
        android:progress="100"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar7"
        app:layout_constraintStart_toEndOf="@+id/exitButton3"
        app:layout_constraintTop_toTopOf="@+id/progressBar7" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="356dp"
        android:contentDescription="@drawable/paper_waste"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paper_waste" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="@drawable/bio_waste"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bio_waste" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="120dp"
        android:contentDescription="@drawable/plastic_bottle"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton8"
        app:srcCompat="@drawable/plastic_bottle" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="163dp"
        android:layout_height="201dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="120dp"
        android:contentDescription="@drawable/e_waste"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton10"
        app:layout_constraintTop_toBottomOf="@+id/imageButton9"
        app:srcCompat="@drawable/e_waste" />

</androidx.constraintlayout.widget.ConstraintLayout>