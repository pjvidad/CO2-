<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true" >

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="121dp"
        android:layout_height="98dp"
        android:layout_marginStart="274dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="589dp"
        android:contentDescription="@string/home_user_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="226dp"
        android:layout_marginBottom="594dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/home_username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#2E4057"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fixedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="646dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/home_welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="528dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/taskButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/button_blue"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/home_task"
            android:textColor="@color/white" />

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/eventsButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/button_green"
            android:fontFamily="@font/montserrat_medium"

            android:text="@string/home_events"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/TaskOrEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="50dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="478dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/home_event_title"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="111dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:contentDescription="@string/home_event_image_desc"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery"
            tools:ignore="ImageContrastCheck" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="633dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="74dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Active dot (larger, dark) -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="#AAD7A4"
            android:backgroundTint="#AAD7A4" />

        <!-- Inactive dot -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:background="#CCCCCC" />

        <!-- Inactive dot -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="6dp"
            android:background="#CCCCCC" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>