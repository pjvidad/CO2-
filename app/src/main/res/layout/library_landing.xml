<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/booklibrary"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/library_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="144dp"
        android:fontFamily="@font/montserrat_bold"

        android:text="@string/library_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#2E4057"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/library_energy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/energy_icon"
        app:layout_constraintBottom_toTopOf="@+id/searchView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/library_energy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576"
        app:srcCompat="@drawable/energyicon" />

    <TextView
        android:id="@+id/library_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="308dp"
        android:text="@string/library_energy"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.5" />

    <SearchView
        android:id="@+id/searchView3"
        android:layout_width="351dp"
        android:layout_height="56dp"
        android:background="@drawable/searchview_border"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/library_title"
        app:layout_constraintVertical_bias="0.5">

    </SearchView>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="106dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="532dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="92dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bookTitle3"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#1C2B48"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/bookTitle3"
            app:cornerRadius="0dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/bookImage3"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/lib_book_3"
            app:srcCompat="@drawable/reducingco2f" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="312dp"
        android:layout_height="106dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="455dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bookImage0"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/lib_book_0"
            app:srcCompat="@drawable/thecarboncycle" />

        <Button
            android:id="@+id/bookTitle0"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1C2B48"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/bookTitle0"
            app:cornerRadius="0dp"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="106dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="333dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bookTitle1"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#1C2B48"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/bookTitle1"
            app:cornerRadius="0dp"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/bookImage1"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/lib_book_1"
            app:srcCompat="@drawable/trashtravels" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="106dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="213dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bookImage2"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/lib_book_2"
            app:srcCompat="@drawable/co2forkids" />

        <Button
            android:id="@+id/bookTitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#1C2B48"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/bookTitle2"
            app:cornerRadius="0dp"
            android:textColor="@color/white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>