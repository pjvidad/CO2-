<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg500"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/tracker_tue"/>

    <TextView
        android:id="@+id/my_aqua_points_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aqua_points"
        android:fontFamily="@font/montserrat"
        android:textColor="#CAFFB9"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/aqua_points_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/aqua_points"
        app:tint="#CAFFB9"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/my_aqua_points_title"
        app:layout_constraintTop_toBottomOf="@+id/my_aqua_points_title"
        android:contentDescription="@string/aqua_points"/>

    <TextView
        android:id="@+id/aqua_points_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aqua99"
        android:fontFamily="@font/montserrat"
        android:textColor="#CAFFB9"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/aqua_points_icon"
        app:layout_constraintStart_toEndOf="@+id/aqua_points_icon"
        app:layout_constraintTop_toTopOf="@+id/aqua_points_icon" />

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_redeem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CAFFB9"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/redeem"
            android:textColor="@color/button_blue"
            app:cornerRadius="20dp"
            tools:ignore="VisualLintButtonSize" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_customize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2E4057"
            android:fontFamily="@font/montserrat"
            android:text="@string/customize"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"
            tools:ignore="VisualLintButtonSize,VisualLintBounds" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>