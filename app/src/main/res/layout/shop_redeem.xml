<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/bg500"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/tracker_tue"/>

    <TextView
        android:id="@+id/my_aqua_points_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aqua_points"
        android:fontFamily="@font/montserrat"
        android:textColor="#CAFFB9"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/aqua_points_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/aqua_points"
        app:tint="#CAFFB9"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/my_aqua_points_title"
        app:layout_constraintTop_toBottomOf="@+id/my_aqua_points_title"
        android:contentDescription="@string/aqua_points"/>

    <TextView
        android:id="@+id/aqua_points_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aqua99"
        android:fontFamily="@font/montserrat"
        android:textColor="#CAFFB9"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/aqua_points_icon"
        app:layout_constraintStart_toEndOf="@+id/aqua_points_icon"
        app:layout_constraintTop_toTopOf="@+id/aqua_points_icon" />

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_redeem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CAFFB9"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/redeem"
            android:textColor="@color/button_blue"
            app:cornerRadius="20dp"
            tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_customize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2E4057"
            android:fontFamily="@font/montserrat"
            android:text="@string/customize"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"
            tools:ignore="VisualLintButtonSize,VisualLintBounds" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="120dp" 
        app:layout_constraintTop_toBottomOf="@+id/bg500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/title_aqua_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/aqua_points_title"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="12dp"
                app:columnCount="3"
                app:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/blue"
                        android:contentDescription="@string/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/blue"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/redeem"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/green"
                        android:contentDescription="@string/green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/green"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/redeem"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/fedora"
                        android:contentDescription="@string/fedora"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/fedora"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/redeem"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/grey"
                        android:contentDescription="@string/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/grey"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/redeem"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/lightpink"
                        android:contentDescription="@string/lightpink" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/lightpink"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/redeem"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:elevation="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill_horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bibe"
                        android:contentDescription="@string/bibe" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/bibe"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/redeem"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/title_earn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/earn_more"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_quiz"
                        android:contentDescription="@string/take_a_quiz"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"

                        android:text="@string/take_a_quiz_label"

                        android:textAlignment="center"
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/button_quiz"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/start"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_task"


                        android:contentDescription="@string/finish_daily_tasks"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"

                        android:text="@string/finish_daily_tasks_label"

                        android:textAlignment="center"
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/button_tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/start"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_footprint"
                        android:contentDescription="@string/input_footprint"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"

                        android:text="@string/input_footprint_label"

                        android:textAlignment="center"
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/button_footprint"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2E4057"
                        android:text="@string/start"
                        android:textColor="#CAFFB9"
                        android:textSize="10sp"
                        tools:ignore="SmallSp,TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>