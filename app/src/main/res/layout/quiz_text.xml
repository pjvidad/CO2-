<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="260dp"
        android:layout_height="119dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/question_2"
        android:textColor="#66A182"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="196dp" />

    <ImageView
        android:id="@+id/userLife6"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@drawable/ic_life_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_life_foreground" />

    <ProgressBar
        android:id="@+id/progressBar15"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/userLife6"
        app:layout_constraintStart_toEndOf="@+id/progressBar16"
        app:layout_constraintTop_toTopOf="@+id/userLife6" />

    <ProgressBar
        android:id="@+id/progressBar16"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar15"
        app:layout_constraintStart_toEndOf="@+id/progressBar17"
        app:layout_constraintTop_toTopOf="@+id/progressBar15" />

    <ImageView
        android:id="@+id/exitButton6"
        android:layout_width="89dp"
        android:layout_height="85dp"
        android:contentDescription="@drawable/ic_exit_foreground"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar17"
        app:srcCompat="@drawable/ic_exit_foreground" />

    <ProgressBar
        android:id="@+id/progressBar17"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="62dp"
        android:layout_height="4dp"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar16"
        app:layout_constraintStart_toEndOf="@+id/exitButton6"
        app:layout_constraintTop_toTopOf="@+id/progressBar16" />

    <TextView
        android:id="@+id/lessonTitle7"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="126dp"

        android:layout_marginEnd="89dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/Lesson1"
        android:textColor="#2E4057"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="268dp"
        android:layout_height="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#CAFFB9"
        android:fontFamily="@font/montserrat"
        android:text="@string/Q2.C1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button4"
        android:layout_width="268dp"
        android:layout_height="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#CAFFB9"
        android:fontFamily="@font/montserrat"
        android:text="@string/Q2.C4"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="268dp"
        android:layout_height="71dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#CAFFB9"
        android:fontFamily="@font/montserrat"
        android:text="@string/Q2.C3"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="268dp"
        android:layout_height="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#CAFFB9"
        android:fontFamily="@font/montserrat"
        android:text="@string/Q2.C2"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>