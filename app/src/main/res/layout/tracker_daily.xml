<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"

        android:text="@string/tracker_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Today's Impact -->
    <TextView
        android:id="@+id/todayImpact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat"
        android:text="@string/tracker_today_impact"
        android:textColor="#444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/impactValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_black"

        android:text="@string/tracker_impact_value"
        android:textColor="#000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/impactComparison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat"
        android:text="@string/tracker_impact_comparison"
        android:textColor="#4CAF50"
        android:textSize="12sp" />

    <!-- Add Button -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#1C2B48"
        android:fontFamily="@font/montserrat_medium"
        android:shape="oval"
        android:text="@string/tracker_add"
        android:textColor="#fff"
        android:textSize="14sp" />

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/todayButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#6FCF97"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/tracker_today"
            android:textColor="#fff" />

        <Button
            android:id="@+id/weekButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#1C2B48"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/tracker_week"
            android:textColor="#fff" />

        <Button
            android:id="@+id/monthButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1C2B48"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/tracker_month"
            android:textColor="#fff" />
    </LinearLayout>

    <!-- Breakdown Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/tracker_today_breakdown"
        android:textStyle="bold" />

    <!-- Breakdown List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Transportation-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#E5FFD9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="#AFFFBA"
                android:padding="8dp"
                android:src="@drawable/ic_car" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_transport"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_transport_value"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Energy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#E5FFD9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="#AFFFBA"
                android:padding="8dp"
                android:src="@drawable/ic_energy" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_energy"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_energy_value"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Food -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#E5FFD9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="#AFFFBA"
                android:padding="8dp"
                android:src="@drawable/ic_food" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_food"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_food_value"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Shopping-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#E5FFD9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="#AFFFBA"
                android:padding="8dp"
                android:src="@drawable/ic_shopping" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_shopping"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/tracker_energy_value"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <!-- Bottom Navigation -->


</LinearLayout>
